<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daras.robocare.RecordSymptoms"
    android:background="#0297d6">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:gravity="center">

        <ImageView
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:id="@+id/imageView"
            android:src="@drawable/appicon" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ROBO CARE"
                android:id="@+id/textView17"
                android:layout_weight="1"
                android:focusable="false"
                android:textStyle="bold"
                android:textColor="#f3ecf3"
                android:textSize="28sp"
                android:textAlignment="textStart" />

            <TextView
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Care for Living"
                android:id="@+id/textView18"
                android:layout_weight="1"
                android:textColor="#d4888888"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/SpeaktoDoctor"
                android:id="@+id/textView19"
                android:textColor="#f2433a3a"
                android:textSize="22sp"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRecord"
                android:layout_gravity="right"
                android:src="@drawable/record"
                android:background="#00000000"
                android:layout_weight="1"
                android:onClick="RecordVoiceonClick"  />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="174dp"
                android:id="@+id/lstsymptoms"
                android:visibility="visible"
                android:longClickable="true"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerPadding="5dp"
            android:layout_margin="20dp"
            android:gravity="center">

            <Button
                android:layout_width="143dp"
                android:layout_height="37dp"
                android:text="Know your Disease"
                android:id="@+id/btnKnowDisease"
                android:textSize="15sp"
                android:textAlignment="center"
                android:background="@android:color/white"
                android:onClick="KnowDiseaseOnclick"/>

            <Button
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:text="Record Again"
                android:textSize="15sp"
                android:textAlignment="center"
                android:id="@+id/button2"
                android:clickable="false"
                android:paddingLeft="5dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

